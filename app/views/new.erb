<form method="POST" action="/recipes/<%= @recipe.id %>" >
  <ul>
  <li><label for="name">Name:</label>
  <input type="text" id="name" name="name" value= <%= @recipe.name %> ></li>

  <li><label for="ingredients">Ingredients:</label>
  <input type="text" id="ingredients" name="ingredients" value= <%= @recipe.ingredients %> ></li>

  <li><label for="ingredients">Cook Time:</label>
  <input type="text" id="cook_time" name="cook_time" value= <%= @recipe.cook_time %> ></li>

  <input type="submit" value="submit">
  </ul>

  <% if @recipe.id %>
  <input type= "hidden" name="_method" value="PATCH">
  <%end%>
  </form>